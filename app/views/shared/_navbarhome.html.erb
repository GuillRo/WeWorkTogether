<div class="navbar-wagon-home navbar-fixed-top">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-home-brand" do %>
    <%= image_tag("logo_ylw.svg", alt: "WeWorkTogether Logo", height: 50) %>
  <% end %>
  <!-- Right Navigation -->
  <div class="navbar-wagon-home-right hidden-xs hidden-sm">
    <% if user_signed_in? %>
      <!-- Links when logged in -->
      <%= link_to "Add flat", new_flat_url, class: "navbar-wagon-home-item navbar-wagon-home-link"%>
      <%#= link_to "Host", "#", class: "navbar-wagon-home-item navbar-wagon-home-link" %>
      <%#= link_to "Trips", "#", class: "navbar-wagon-home-item navbar-wagon-home-link" %>
      <%#= link_to "Messages", "#", class: "navbar-wagon-home-item navbar-wagon-home-link" %>
      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-home-item">
        <div class="dropdown">
          <%= cl_image_tag current_user&.profile&.photo&.url, class: "avatar dropdown-toggle", id: "navbar-wagon-home-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-home-dropdown-menu">
            <li>
              <%= link_to profile_url(current_user.profile) do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to edit_user_registration_url do %>
                <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-home-item navbar-wagon-home-link" %>
    <% end %>
  </div>
  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-home-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-home-dropdown-menu">
        <li>
          <%if user_signed_in?%>
            <%= link_to profile_url(current_user) do %>
              <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
            <% end %>
          </li>
          <li>
            <%= link_to edit_user_registration_url do %>
              <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
            <% end %>
          </li>
        <% else%>
          <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-home-item navbar-wagon-home-link" %>
        <%end%>
      </ul>
    </div>
  </div>
</div>
