<div class="container">
  <div class="yellow-container">
    <div class="white-container">
      <h2> Your review </h2>
      <div style="padding: 20px; margin-right: 30px;">
        <%= form_for [@workspace, @workspace_review] do |f| %>
          <div class="form-group">
            <%= f.label "Rate the workspace (1 = terrible, 5 = excellent)" %>
            <%= f.text_field :score, required: true, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label "Share your experience" %>
            <%= f.text_field :content, required: true, class: 'form-control' %>
          </div>
          <%= f.submit "Add review", class: 'btn btn-info' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
